<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Avalonia.SnipFrame.ViewModels"
             xmlns:views="using:Avalonia.SnipFrame.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Avalonia.SnipFrame.Views.PluginManageView"
             x:DataType="vm:PluginManageViewModel">

    <Grid RowDefinitions="Auto,*">
        <!-- 顶部区域：显示运行中的插件和装载中的知识库 -->
        <Grid Grid.Row="0" RowDefinitions="Auto,Auto" Background="#F5F5F5">
            <TextBlock Grid.Row="0" Text="活动状态" FontWeight="Bold" Margin="0,0,0,0" />

            <!-- 运行中的插件和装载中的知识库面板 -->
            <StackPanel Grid.Row="1" Spacing="8" Orientation="Horizontal">
                <!-- 运行中的插件卡片 -->
                <views:PluginView DataContext="{Binding RunningPlugin}" />
                <!-- 装载中的知识库卡片 -->
                <views:KnowledgeView DataContext="{Binding LoadingKnowledge}" />
            </StackPanel>
        </Grid>

        <!-- 底部区域：分段控件切换显示已安装插件和知识库 -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- 已安装插件标签页 -->
            <TabItem Header="已安装插件">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding AvailablePlugins}" Margin="0,10,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <views:PluginView Margin="0,4,0,4" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <!-- 已安装知识库标签页 -->
            <TabItem Header="已安装知识库">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding AvailableKnowledgeBases}" Margin="0,10,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <views:KnowledgeView Margin="0,4,0,4" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>